
<h1> It is <%=Player.find(@game.active_player).name%>'s turn </h1>
<h1> It is the <%=@game.turn_counter%> turn </h1>
<h1> It is <%=@game.round_counter%>'s round </h1>

<%= button_to "End Turn", @game, method: :patch, form_class: "end_turn"%>

<%= form_for :turn_log, url: turn_logs_path, html: {id: "turn_log" } do |f| %>
  <p>
    Log: <%= f.text_field :documentation %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
<div id='toolbar'></div>
<div class='games play' id="<%= @game.id%>"></div>
